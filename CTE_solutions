--ðŸ”¹ LEVEL 5 â€” Recursive & Advanced CTEs (Very Hard)
-- Q9. From table employees(emp_id, emp_name, manager_id) Use a recursive CTE to return the complete reporting hierarchy for each employee.
WITH t AS (
	SELECT e.emp_name AS Employee, m.emp_name AS Manager 
	FROM employeees e
	JOIN employees m 
	ON e.manager_id = m.emp_id
	) SELECT Employee, Manager FROM t;

-- Q10. From table logs(user_id, log_date) Use a CTE to find users who logged in for at least 5 consecutive days.
WITH t AS (
	SELECT user_id, COUNT(*) AS logged_in FROM logs
	GROUP BY user_id
	HAVING COUNT(DISTINCT log_date) = (
		SELECT HAVING COUNT(log_date)
		FROM logs 
		) t2
	) SELECT user_id FROM t WHERE loggged_in >= 5;

--ðŸ”¹ BONUS â€” Data Engineering Level
-- Q11. From table sales(order_date, product_id, amount)
-- Use multiple CTEs to:
--Calculate monthly sales per product
--Calculate month-over-month growth
--Return products where growth is negative in any month
WITH monthlySales AS (
	SELECT EXTRACT(YEAR|MONTH FROM order_date) AS YYYY-MM, product_id, SUM(amount) AS total_sales 
	FROM sales 
	GROUP BY EXTRACT(YEAR|MONTH FROM order_date), product_id
	) WITH monthlyGrowth AS (
		SELECT YYYY-MM, product_id, total_sales, ROW_NUMBER() OVER(PARTITION BY YYYY-MM ORDER BY EXTRACT(MONTH FROM YYYY-MM) ASC) AS rn
		FROM monthlySales 
		) SELECT product_id 
		FROM monthlyGrowth 
		WHERE total_sales < (
			SELECT total_sales 
			FROM monthlyGrowth
			) AND rn > 2 AND rn = rn-1;
